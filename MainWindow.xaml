<Window x:Class="Lingo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lingo"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="500">
    <Grid Margin="0,0,0,5" Background="#FF15122D">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="399*"/>
            <ColumnDefinition Width="49*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Lingo" HorizontalAlignment="Center" Margin="0,57,0,0" VerticalAlignment="Top" FontSize="48" BorderBrush="{Binding AllowDrop, ElementName=label}" FontWeight="Bold" FontStyle="Italic" Opacity="0.9" Foreground="#FF1F7FFF" Grid.Column="1" Height="74" Width="136">
            <Label.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF6E17F3" Offset="1"/>
                </LinearGradientBrush>
            </Label.Background>
        </Label>
        <Label Grid.Column="1" Content="Regisztráció" HorizontalAlignment="Center" Margin="0,159,0,0" VerticalAlignment="Top">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>

    </Grid>
</Window>
