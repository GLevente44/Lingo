<Window x:Class="Lingo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lingo"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="500">
    <Grid Margin="0,0,0,5">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FF8AA7ED" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="49*"/>
            <ColumnDefinition Width="399*"/>
            <ColumnDefinition Width="49*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="label" Content="Lingo" HorizontalAlignment="Center" Margin="0,58,0,0" VerticalAlignment="Top" FontSize="48" BorderBrush="{Binding AllowDrop, ElementName=label}" FontWeight="Bold" FontStyle="Italic" Opacity="0.9" Grid.Column="1" Height="85" Width="133" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="20" AngleY="10"/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF4151DE"/>
                    <GradientStop Color="#FF34CCD0" Offset="1"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Label Grid.Column="1" Content="Bejelentkezés" HorizontalAlignment="Center" Margin="0,184,0,0" VerticalAlignment="Top" FontSize="36" FontWeight="Bold">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FF419DAF"/>
                    <GradientStop Color="#FF395CB3" Offset="0.158"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <TextBox x:Name="textbox1" Grid.Column="1" HorizontalAlignment="Center" Margin="0,311,0,0" TextWrapping="Wrap" Width="205" Foreground="#FF82B7FF" FontSize="24" Text="" FontWeight="Bold" FontStyle="Italic" SelectionBrush="#FF82B7FF" VerticalAlignment="Top"/>
        <Button Grid.Column="1" Content="Belépés" HorizontalAlignment="Center" Margin="0,483,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.13,0.555" FontSize="25" FontWeight="Bold" Foreground="#FFD9E2EA" Width="133">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF325B7B" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Image Grid.Column="1" Height="100" Margin="0,609,0,0" VerticalAlignment="Top" Width="100" Source="/logo_hub.webp" HorizontalAlignment="Center"/>
        <PasswordBox Grid.Column="2" HorizontalAlignment="Left" Margin="115,-59,0,0" VerticalAlignment="Top" Width="120"/>
        <PasswordBox Grid.Column="1" HorizontalAlignment="Center" Margin="0,412,0,0" VerticalAlignment="Top" Width="205" Height="34" Foreground="#FF1876E0" FontWeight="Bold" FontStyle="Italic" FontSize="24"/>
        <Button Grid.Column="1" Content="Nincs fiókja?" HorizontalAlignment="Center" Margin="0,552,0,0" VerticalAlignment="Top" RenderTransformOrigin="-4.13,0.555" FontSize="16" FontWeight="Bold" Foreground="#FFCED9E2" Width="133">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="#FF325B7B" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Label Grid.Column="1" Content="Felhasználónév" HorizontalAlignment="Left" Margin="117,264,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FF419DAF"/>
                    <GradientStop Color="#FF395CB3" Offset="0.158"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>
        <Label Grid.Column="1" Content="Jelszó" HorizontalAlignment="Center" Margin="0,370,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold">
            <Label.Foreground>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FF419DAF"/>
                    <GradientStop Color="#FF395CB3" Offset="0.158"/>
                </LinearGradientBrush>
            </Label.Foreground>
        </Label>

    </Grid>
</Window>
